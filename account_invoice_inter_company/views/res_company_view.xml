<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_company_inter_change_inherit_form">
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Inter-Company">
                        <group string="Invoice">
                            <field name="intercompany_user_id" colspan="2" attrs="{'required': True}" domain="[('id', '!=', 1), ('company_id', '=', id)]"/>
                            <field name="invoice_auto_validation"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
